<configuration>

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{ss.SSS} %-5level %logger - %msg%n</pattern>
		</encoder>
	</appender>

	<logger name="com.unnsvc.rhena" level="DEBUG" />

	<root level="DEBUG">
		<appender-ref ref="STDOUT" />
	</root>

</configuration>