<configuration>

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{ss.SSS} %-5level %40.40logger - %msg%n</pattern>
		</encoder>
	</appender>

	<logger name="com.unnsvc.rhena.core.resolution.RhenaModuleParser" level="INFO" />
	<logger name="com.unnsvc.rhena.core.model.visitors" level="INFO" />
	<logger name="com.unnsvc.rhena.core.resolution.parsers" level="INFO" />
	<logger name="com.unnsvc.rhena" level="DEBUG" />

	<root level="DEBUG">
		<appender-ref ref="STDOUT" />
	</root>

</configuration>
