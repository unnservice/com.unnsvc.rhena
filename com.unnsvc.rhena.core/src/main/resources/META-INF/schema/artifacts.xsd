<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" targetNamespace="urn:rhena:artifacts" xmlns:tns="urn:rhena:artifacts" xmlns:common="urn:rhena:common"
	elementFormDefault="qualified">

	<!-- in the future, extend the schema to allow a default="" on <execution> and a tag="" on artifact, to allow for multiple artifacts in an execution. Or more importantly, 
		we want for example to access the sources -->

	<xs:import namespace="urn:rhena:common" schemaLocation="./common.xsd" />

	<xs:complexType name="artifactType">
		<xs:attribute name="name" type="xs:string" use="required" />
		<xs:attribute name="sha1" type="xs:string" use="required" />
	</xs:complexType>

	<xs:complexType name="artifactDescriptorType">
		<xs:sequence>
			<xs:element name="primary" type="tns:artifactType" minOccurs="1" maxOccurs="1" />
			<xs:element name="sources" type="tns:artifactType" minOccurs="0" maxOccurs="1" />
		</xs:sequence>
		<xs:attribute name="classifier" type="xs:string" use="required" />
	</xs:complexType>

	<xs:complexType name="metaType">
		<xs:attribute name="date" type="xs:dateTime" use="required" />
	</xs:complexType>

	<xs:element name="artifacts">
		<xs:complexType>
			<xs:sequence>
				<xs:element name="meta" type="tns:metaType" minOccurs="1" maxOccurs="1" />
				<xs:element name="artifact" type="tns:artifactDescriptorType" minOccurs="1" maxOccurs="unbounded" />
			</xs:sequence>
		</xs:complexType>
	</xs:element>

</xs:schema>
