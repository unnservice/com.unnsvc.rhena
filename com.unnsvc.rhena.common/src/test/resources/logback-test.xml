<configuration>

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{ss.SSS} %-5level %40.40logger - %msg%n</pattern>
		</encoder>
	</appender>

	<logger name="com.unnsvc.rhena.common.Utils" level="INFO" />
	<logger name="com.unnsvc.rhena.core.visitors.ModelMergeVisitor" level="INFO" />
<!-- 	<logger name="com.unnsvc.rhena.core.resolution.RhenaModuleParser" level="INFO" /> -->
	<logger name="com.unnsvc.rhena.core.resolution.RhenaResolutionContext" level="INFO" />
	<logger name="com.unnsvc.rhena.core" level="TRACE" />

	<root level="DEBUG">
		<appender-ref ref="STDOUT" />
	</root>

</configuration>
